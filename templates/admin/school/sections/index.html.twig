{% extends 'admin/adminbase.html.twig' %}

{% block title %} Admin | Biereau.be - Sections{% endblock %}

{% block content %}

        <div class="mt-4 ml-4 col-lg-6">
            <h1 class="h2">Sections de l'école</h1>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="table-responsive">
                <table class="table table-striped table-sm table-bordered">
                    <thead>
                    <tr>
                        <th>Nom Complet</th>
                        <th>Abrégé</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for section in sections %}
                        <tr>
                            <td>{{ section.sectionFullName }}</td>
                            <td>{{ section.sectionShortName }}</td>
                            <td>
                                <a href="{{ path('admin.sections.edit', {id: section.id}) }}" class="btn btn-secondary">Editer</a>
                                <form method="post" action="{{ path('admin.sections.delete', {id: section.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes-vous certain?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <a href="{{ path('admin.sections.new') }}" class="btn btn-primary">Nouvelle Section</a>
        </div>

{% endblock %}