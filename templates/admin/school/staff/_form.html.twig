{{ form_start(form) }}

<div class="card-body">
    <div class="row mt-3">
        <div class="col-md-4">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.lastName) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-2">
            {{ form_row(form.gender) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fonction) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            {{ form_row(form.imageFile) }}
        </div>
    </div>

    <div class="text-right mt-3 mb-3">
        <a href="{{ path('admin.ecole.staff') }}" class="btn btn-danger">Annuler</a>
        <button class="btn btn-success">{{ button|default('Enregistrer') }}</button>
    </div>
</div>

{{ form_end(form) }}