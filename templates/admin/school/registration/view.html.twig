{% extends ("admin/adminbase.html.twig") %}

{% block title %} Admin | Biereau.be - Gestion des inscriptions{% endblock %}

{% block content %}
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Inscrits aux journées d'informations</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="multi-filter-select" class="display table table-striped table-hover" >
                                        <thead>
                                        <tr>
                                            <th>Date d'inscription</th>
                                            <th>Nom</th>
                                            <th>Prénom</th>
                                            <th>Téléphone</th>
                                            <th>E-Mail</th>
                                            <th>Prénom de l'enfant</th>
                                            <th>Nom de l'enfant</th>
                                            <th>Date de naissance</th>
                                            <th>Date de rentrée</th>
                                            <th>Section</th>
                                            <th>Séance d'info</th>
                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>
                                            <th>Date d'inscription</th>
                                            <th>Nom</th>
                                            <th>Prénom</th>
                                            <th>Téléphone</th>
                                            <th>E-Mail</th>
                                            <th>Prénom de l'enfant</th>
                                            <th>Nom de l'enfant</th>
                                            <th>Date de naissance</th>
                                            <th>Date de rentrée</th>
                                            <th>Section</th>
                                            <th>Séance d'info</th>
                                        </tr>
                                        </tfoot>
                                        <tbody>
                                        {% for registrant in registrants %}
                                        <tr>
                                            <td>{{ registrant.createdAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                            <td>{{ registrant.parentFirstName }}</td>
                                            <td>{{ registrant.parentLastName }}</td>
                                            <td>{{ registrant.parentPhone }}</td>
                                            <td>{{ registrant.parentEmail }}</td>
                                            <td>{{ registrant.childFirstName }}</td>
                                            <td>{{ registrant.childLastName }}</td>
                                            <td>{{ registrant.childBirthDate|format_datetime('medium', 'none', locale='fr') }}</td>
                                            <td>{{ registrant.childEntryDate|format_datetime('medium', 'none', locale='fr') }}</td>
                                            <td>{{ registrant.childSection }}</td>
                                            <td>{{ registrant.sessionDate|format_datetime('medium', 'none', locale='fr') }}</td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

