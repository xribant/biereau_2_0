{% extends 'admin/adminbase.html.twig' %}

{% block title %} Admin | Modidier les données de l'école{% endblock %}

{% block content %}

    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <h4 class="page-title">Données de l'école</h4>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_start(form) }}
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Coordonnées</div>
                            </div>
                            <div class="card-body">
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.name) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.street) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.streetNum) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.postalCode) }}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.city) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3 mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.phone1) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.phone2) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3 mb-1">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.email1) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.email2) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right mt-3 mb-3">
                                    <button class="btn btn-success">{{ button|default('Enregistrer') }}</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}