{% extends "admin/adminbase.html.twig" %}

{% block title %} Admin | Biereau.be - Utilisateurs {% endblock %}

{% block content %}

    <div class="main-panel">
        <div class="content">
            <div class="page-inner">

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Gestion des utilisateurs</h4>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message|raw }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table id="multi-filter-select" class="display table table-striped table-hover" >
                                        <thead>
                                        <tr>
                                            <th>Prénom</th>
                                            <th>Nom</th>
                                            <th>Nom d'utilisateur</th>
                                            <th>E-Mail</th>
                                            <th>Compte</th>
                                            <th>Date de création</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>
                                            <th>Prénom</th>
                                            <th>Nom</th>
                                            <th>Nom d'utilisateur</th>
                                            <th>E-Mail</th>
                                            <th>Compte</th>
                                            <th>Date de création</th>
                                            <th></th>
                                        </tr>
                                        </tfoot>
                                        <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td>{{ user.firstName }}</td>
                                                <td>{{ user.lastName }}</td>
                                                <td>{{ user.username }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>
                                                    {% for role in user.roles %}
                                                        {% if role == 'ROLE_ADMIN' %}Admin, {% else %}Standard {% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>{{ user.createdAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                                <td>
                                                    <a href="{{ path('admin.users.edit', {id: user.id}) }}" class="btn btn-sm btn-warning"><i class="far fa-edit"></i></a>
                                                    <form method="post" action="{{ path('admin.users.delete', {id: user.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes-vous certain?')">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                        <button class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

