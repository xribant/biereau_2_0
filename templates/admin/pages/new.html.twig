{% extends 'admin/adminbase.html.twig' %}

{% block title %} Admin | Biereau.be - Gestion de Contenu{% endblock %}

{% block content %}

    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="row">
                    <div class="col-md-12">

                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Ajouter une Page</div>
                            </div>

                            {{ form_start(form) }}

                            <div class="card-body">
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.title) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.parentNavMenu) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.parentSubMenu) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-8">
                                        <div class="form-group form-group-default">
                                            {{ form_row(form.bannerImageFile) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="text-left mt-3 mb-3">
                                    <a href="{{ path('admin.pages.index') }}" class="btn btn-danger">Annuler</a>
                                    <button class="btn btn-success">{{ button|default('Ajouter') }}</button>
                                </div>
                            </div>

                            {{ form_end(form) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
