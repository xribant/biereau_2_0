{% extends 'admin/adminbase.html.twig' %}

{% block title %} Admin | Biereau.be - Gestion de Contenu{% endblock %}

{% block content %}

    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Gestion des e-mails de notification</div>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message|raw }}
                                    </div>
                                {% endfor %}
                                <table class="table table-striped mt-3">
                                    <thead>
                                    <tr>
                                        <th scope="col" style="width: 5%">#</th>
                                        <th scope="col" style="width: 20%">Créé le</th>
                                        <th scope="col" style="width: 20%">Modifié le</th>
                                        <th scope="col" style="width: 20%">Nom</th>
                                        <th scope="col" style="width: 20%">Copie envoyée vers</th>
                                        <th style="width: 15%"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in notifications %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ item.createdAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                            <td>{{ item.updatedAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                            <td>{{ item.name }}</td>
                                            <td>{{ item.toAddress }}</td>
                                            <td>
                                                <a href="{{ path('admin.notification.edit', {id: item.id}) }}" class="btn btn-sm btn-warning"><i class="far fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}