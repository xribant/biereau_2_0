{{ form_start(form) }}

<div class="card-body">
    <div class="row mt-3">
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_row(form.name) }}
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_row(form.fromAddress) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-default">
                {{ form_row(form.toAddress) }}
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="form-group form-group-default">
                {{ form_row(form.bodyText) }}
            </div>
        </div>
    </div>

    <div class="text-right mt-3 mb-3">
        <a href="{{ path('admin.notification.index') }}" class="btn btn-danger">Annuler</a>
        <button class="btn btn-success">{{ button|default('Enregistrer') }}</button>
    </div>
</div>

{{ form_end(form) }}