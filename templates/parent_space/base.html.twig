<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content=""/>
    <meta name="author" content="Xavier Ribant"/>

    <title>{% block title %}{% endblock %}</title>

    <!-- loader-->
    <link href="{{ asset('parent_space/css/pace.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('parent_space/js/pace.min.js') }}"></script>

    <!-- Favicon-->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('parent_space/images/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('parent_space/images/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('parent_space/images/favicon-16x16.png') }}">
    <link rel="manifest" href="{{  asset('parent_space/images/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('parent_space/images/safari-pinned-tab.svg') }}" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
        <!-- Vector CSS -->
        <link href="{{ asset('parent_space/plugins/vectormap/jquery-jvectormap-2.0.2.css') }}" rel="stylesheet"/>
        <!-- simplebar CSS-->
        <link href="{{ asset('parent_space/plugins/simplebar/css/simplebar.css') }}" rel="stylesheet"/>
        <!-- Bootstrap core CSS-->
        <link href="{{ asset('parent_space/css/bootstrap.min.css') }}" rel="stylesheet"/>
        <!-- animate CSS-->
        <link href="{{ asset('parent_space/css/animate.css') }}" rel="stylesheet" type="text/css"/>
        <!-- Icons CSS-->
        <link href="{{ asset('parent_space/css/icons.css') }}" rel="stylesheet" type="text/css"/>
        <!-- Sidebar CSS-->
        <link href="{{ asset('parent_space/css/sidebar-menu.css') }}" rel="stylesheet"/>
        <!-- Font Awesome CSS-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!-- Custom Style-->
        <link href="{{ asset('parent_space/css/app-style.css') }}" rel="stylesheet"/>
    {% endblock %}

</head>

<body class="bg-theme bg-theme1">
{%  block body %}
    <!-- Start wrapper-->
    <div id="wrapper">
        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="{{ path('parent_space') }}">
                    <img src="{{  asset('parent_space/images/logo_espace_parents.png') }}" class="logo-icon" alt="logo Espace Parent">
                    <h5 class="logo-text">Parents@Biereau</h5>
                </a>
            </div>
            <ul class="sidebar-menu do-nicescrol">
                <li class="sidebar-header">MENU</li>
                <li>
                    <a href="{{ path('parent_space') }}">
                        <i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="{{  path('documentum') }}">
                        <i class="zmdi zmdi-assignment"></i> <span>Documents</span>
                    </a>
                </li>
            </ul>

        </div>
        <!--End sidebar-wrapper-->

        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav class="navbar navbar-expand fixed-top">
                <ul class="navbar-nav mr-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link toggle-menu" href="javascript:void();">
                            <i class="icon-menu menu-icon"></i>
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav align-items-center right-nav-link">
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" data-toggle="dropdown" href="#">
                            <span class="user-profile"><i class="fas fa-angle-down"></i> {{ app.user.firstName }} {{ app.user.lastName }}</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item"><i class="icon-power mr-2"></i> <a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </header>
        <!--End topbar header-->

        {% block content %}
        {% endblock %}

        <!--Start footer-->
        <footer class="footer">
            <div class="container">
                <div class="text-center">
                    Copyright © 2021 - Collège du Bièreau LLN - Biereau.be
                </div>
            </div>
        </footer>
        <!--End footer-->



    </div><!--End wrapper-->

    {% block javascript %}
        <!-- Bootstrap core JavaScript-->
        <script src="{{ asset('parent_space/js/jquery.min.js') }}"></script>
        <script src="{{ asset('parent_space/js/popper.min.js') }}"></script>
        <script src="{{ asset('parent_space/js/bootstrap.min.js') }}"></script>

        <!-- simplebar js -->
        <script src="{{ asset('parent_space/plugins/simplebar/js/simplebar.js') }}"></script>
        <!-- sidebar-menu js -->
        <script src="{{ asset('parent_space/js/sidebar-menu.js') }}"></script>
        <!-- loader scripts -->
        <script src="{{ asset('parent_space/js/jquery.loading-indicator.js') }}"></script>
        <!-- Custom scripts -->
        <script src="{{ asset('parent_space/js/app-script.js') }}"></script>
        <!-- Chart js -->
        <script src="{{ asset('parent_space/plugins/Chart.js/Chart.min.js') }}"></script>
        <!--Font Awesome js-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.js" integrity="sha512-AsoAG+OFcSvtqlspW166UTUYg7F4GEu0yNhzTIRfOGysIQA8Dqk1WZwyoN4eX6mX4DaSk703Q1iM0M47rw25Kw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <!-- Index js -->
        <script src="{{ asset('parent_space/js/index.js') }}"></script>
    {% endblock %}

{% endblock %}

</body>
</html>

